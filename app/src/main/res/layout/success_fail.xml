<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RL_Dialog"
    android:background="@drawable/success_dialog"
    android:layout_width="match_parent"
    android:layout_height="300dp">
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/TvStatus"
            android:gravity="center"
            android:hint="SUCCESS"
            android:textColorHint="@color/hint_color"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/TvToken"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_rouond_grey"
            android:gravity="center"
            android:hint="content regarding success"
            android:textColorHint="@color/hint_color"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_width="wrap_content"
            android:layout_height="30dp"></TextView>
        <TextView
            android:id="@+id/TvMsg"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/grey"
            android:textSize="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <Button
            android:id="@+id/BtnOK"
            android:text="OK"
            android:gravity="center"
            android:fontFamily="@font/poppins"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/rounded_green"
            android:layout_width="150dp"
            android:layout_height="40dp"></Button>

    </LinearLayout>

</RelativeLayout>